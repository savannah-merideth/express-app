extends layout

block content
  h1 Books
  form(action="/books/search" method="post")
    span
      input(name="search" type="search" placeholder="Search books")
      input.button(type='submit' value='Search')
  p
    a.button(href='/books/new') Create New Book
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody
      each book in books
        tr
          td
            a(href=`/books/${book.id}`)= book.title
          td= book.author
          td= book.genre
          td= book.year
